{
    /* There seems to be a regression in mpegtsdemux 1.16.1 that causes videos to freeze */
    "name": "gst-plugins-bad",
    "buildsystem": "meson",
    "no-make-install": true,
    "make-args": ["gst/mpegtsdemux/libgstmpegtsdemux.so"],
    "post-install": [
      "install -Dm644 --target-directory=/app/lib/gstreamer-1.0 gst/mpegtsdemux/libgstmpegtsdemux.so"
    ],
    "sources": [
        {
            "type": "git",
            "url": "https://gitlab.freedesktop.org/gstreamer/gst-plugins-bad.git",
            "tag": "1.16.0",
            "commit": "5fde70bb63a1cbf6f734fb2429e74ffb53126217"
        }
    ]
}
